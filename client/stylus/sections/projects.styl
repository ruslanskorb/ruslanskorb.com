section#projects
  background-color DARK_WHITE
  background linear-gradient(#f9f9f9, #f3f3f3)

  // Fade in
  @media notPhone
    &.show
      > .title
        fadein()
      .cardLayout
        for $i in (0..30)
          > a:nth-child({$i}) .card
            fadein($i * 150ms + 200ms)
  > .title
    title()
    padding-bottom 0
    &.sub
      subtitle()
    @media notPhone
      opacity 0
  .cardLayout
    margin-bottom 20px
    position relative
    text-align center
    @media notPhone
      .card
        opacity 0
.card
  cardSpacing = 15px
  display inline-block
  margin cardSpacing
  position relative
  width 150px
  height 150px
  overflow hidden

  text-align center
  border-radius 5px
  color WHITE
  transition transform transitionSpeed
  @media phone
    margin (cardSpacing * 0.5) cardSpacing
    width "calc(100% - %s)" % (2*cardSpacing)
  @media (min-width 600px)
    width 150px
    margin cardSpacing
  &:hover
    transform scale(1.3)
  .photo
    position absolute
    top 12px
    left 0
    right 0
    margin auto
    width 70px
  .textArea
    position absolute
    bottom 0
    width 100%
    text-align left
    padding 3px 3px 6px 3px
    .title
      font-size FONT_XSMALL
      font-weight 700
      padding-bottom 3px
      transition color transitionSpeed
      &:after
        padding-left 10px
        content 'Â»'
    .description
      font-size FONT_XXSMALL
      line-height 1.3

  // Custom CSS
  card($bgcolor)
    background-color $bgcolor
    .textArea
      background-color darken($bgcolor, 10%)

  // default
  card(red)

