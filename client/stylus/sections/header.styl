header
  background-color rgb(241, 182, 5)
  height 100%
  overflow hidden
  text-align center

  boxWidth = 700px
  boxHeight = 500px
  .centerBox
    position absolute
    left 50%
    top 50%
    width boxWidth
    height boxHeight
    margin-left (boxWidth/-2)
    margin-top (boxHeight/-2)
    @media phone
      width phoneWidth
      margin-left (phoneWidth/-2)
    .name
      title()
      font-size FONT_XLARGE
      margin 12px 0
      left 4px
      @media phone
        font-size FONT_MEDIUM
        line-height 2
        padding-bottom 0
    .bio
      color ORANGE
      font-size FONT_MEDIUM
      margin-bottom 30px
      .bullet
        padding 0 10px
      @media phone
        font-size FONT_SMALL
    ul li
      font-size FONT_MEDIUM
      line-height 2em
      letter-spacing 2px
      color rgb(225, 225, 225)
      transition color transitionSpeed ease
      &:hover
        color LIGHT_BLACK
      @media phone
        color rgb(225, 225, 225)
  .arrow
    position absolute
    bottom 10px
    left 50%
    width 100px
    margin-left -50px
    font-size 50px
    cursor pointer
    color rgba(WHITE, 0.3)
    animation bounce 2s infinite
    transition color transitionSpeed ease
    &hover
      color rgba(WHITE, 0.8)
