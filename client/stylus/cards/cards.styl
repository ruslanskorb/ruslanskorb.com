// CSS for cards

.card
  cardSpacing = 30px
  display inline-block
  margin cardSpacing
  position relative
  width 300px
  height 300px
  overflow hidden

  text-align center
  border-radius 5px
  color WHITE
  transition transform transitionSpeed
  @media phone
    margin (cardSpacing * 0.5) cardSpacing
    width "calc(100% - %s)" % (2*cardSpacing)
  @media (min-width 600px)
    width 300px
    margin cardSpacing

  &:hover
    transform scale(1.1)

  .photo
    position absolute
    top 40px
    left 0
    right 0
    margin auto
    width 140px

  .textArea
    position absolute
    bottom 0
    width 100%
    text-align left
    padding 10px 10px 20px 10px
    .title
      font-size FONT_SMALL
      font-weight 700
      padding-bottom 10px
      transition color transitionSpeed
      &:after
        padding-left 10px
        content 'Â»'
    .description
      font-size FONT_TINY
      line-height 1.5


  // Custom CSS
  card($bgcolor)
    background-color $bgcolor
    .textArea
      background-color darken($bgcolor, 10%)

  card(red)

